@using System.Web.UI.WebControls

@{
    ViewBag.Title = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @Styles.Render("~/Content/LayoutStyles.css")
    @*<link rel="stylesheet" type="text/css" href="LayoutStyles.css" />*@

    <title>Document</title>
</head>
<body>
    <div id="MainBlock">




        <div id="Header">
            <div id="ButtonsAligment">


                @using (Html.BeginForm("Home", "Pattern", FormMethod.Post))
                {
                    <button class="UserJob">

                        <span class="HeaderFonts">Работа с пользователями</span>

                    </button>
                }
                @using (Html.BeginForm("EditorPattern", "Pattern", FormMethod.Post))
                {

                    <button class="UserJob">

                        <span class="HeaderFonts">Работа с шаблонами </span>
                    </button>
                }

                @using (Html.BeginForm("PrintPage", "Pattern", FormMethod.Post))
                {
                    <button class="UserJob">

                        <span class="HeaderFonts">Печать</span>

                    </button>
                }
            </div>

        </div>
        <hr>
        @RenderBody()
    </div>





</body>
</html>
