@using System.Web.UI.WebControls
@using PatternCreator.Models
@model AutModelViewModel


@{
    Layout = null;
    ViewBag.Title = "Авторизация";

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/Content/AutorizationStyles.css" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>


<div id="MainContain">
    <div id="Autorize" class="mb-3">
        <span id="TextOne">Авторизация</span>
    </div>
    @using (Html.BeginForm("MainPage", "Pattern", FormMethod.Post, new { @class= "form-row container justify-content-center" }))
    {
         @*<div id="AutContain">*@
        
    <div class="flex-column">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger d-flex text-center" })
        @*@Html.HiddenFor(model => model.id, new { htmlAttributes = new { @class = "hiddeninput" } })*@


        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Имя*"  } })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control my-3", PlaceHolder = "Пароль*"} })
        @*<input type="text" id=Login class="NameStyle" placeholder="Имя">*@
        <input type="submit" class="btn btn-primary w-50 mt-4" value="Вход"/>
    </div>
       
    }


</div>
</body>
</html>